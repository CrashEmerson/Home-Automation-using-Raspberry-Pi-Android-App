<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@color/color_text_white"
    tools:context=".JoinRoomActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hiUserTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/nexalight"
            android:textColor="@color/color_bg_orange"
            android:text="JOIN ROOM"
            android:textAllCaps="true"
            android:textSize="55sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/joinroomCodeEdTxt"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ROOM CODE"
            android:layout_marginTop="60dp"
            android:textColorHint="@color/color_bg_orange"
            app:boxStrokeColor="@color/color_bg_orange"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/color_bg_orange"
            app:startIconDrawable="@drawable/ic_login_username"
            app:startIconTint="@color/color_bg_orange">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/nexabold"
                android:inputType="text"
                android:maxLength="7"
                android:textColor="@color/lightBlack" />


        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/joinBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JOIN"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nexabold"
            android:background="@color/color_bg_orange"
            android:textColor="@color/color_text_white"
            android:textSize="25sp"
            />

    </LinearLayout>


</ScrollView>