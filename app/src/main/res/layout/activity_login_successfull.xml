<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:padding="30dp"
    tools:context=".CommonFiles.LoginSuccessfull">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexabold"
            android:gravity="center"
            android:text="Hi, Emerson"
            android:textAllCaps="true"
            android:textColor="@color/color_bg_orange"
            android:textSize="45sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexalight"
            android:gravity="center"
            android:layout_marginTop="35dp"
            android:text="WELCOME"
            android:textAllCaps="true"
            android:textColor="@color/color_bg_orange"
            android:textSize="45sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexalight"
            android:gravity="center"
            android:text="TO OUR FAMILY"
            android:textAllCaps="true"
            android:textColor="@color/color_bg_orange"
            android:textSize="35sp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_tick"
            app:tint="@color/color_bg_orange" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nexalight"
            android:gravity="center"
            android:text="Registered Successfully !"
            android:textColor="@color/color_bg_orange"
            android:textSize="18sp" />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/color_bg_orange"
            android:padding="15sp"
            android:text="@string/login"
            android:fontFamily="@font/nexabold"
            android:textColor="@color/color_text_white"
            android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>