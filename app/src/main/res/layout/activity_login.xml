<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginLinearLyt"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#34222e"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/childRelativeLyt"
        android:layout_marginTop="20sp">

    <ImageView
        android:id="@+id/pi"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:src="@drawable/pi"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/emersoncrashTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pi"
        android:fontFamily="@font/nexabold"
        android:text="EMERSON CRASH"
        android:textColor="#f9bf8f"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:textSize="18pt"/>

    <TextView
        android:id="@+id/temphumTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emersoncrashTxtView"
        android:fontFamily="@font/nexabold"
        android:gravity="center"
        android:text="TEMPERATURE AND HUMIDITY"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:textSize="9pt"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/childLinearLyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/childRelativeLyt"
        android:orientation="vertical"
        android:layout_margin="20sp"
        android:gravity="fill"
        >

    <EditText
        android:id="@+id/usernameEdTxt"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_gravity="center"
        android:background="@drawable/loginedittxt"
        android:fontFamily="@font/nexalight"
        android:hint="Username"
        android:paddingLeft="20sp"
        android:paddingTop="7sp"
        android:inputType="text"
        android:textColor="@android:color/white"
        android:textColorHint="#e2434b"
        android:layout_marginTop="30sp"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/passwordEdTxt"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_below="@id/usernameEdTxt"
        android:layout_gravity="center"
        android:background="@drawable/loginedittxt"
        android:fontFamily="@font/nexalight"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="20sp"
        android:imeOptions="actionSend"
        android:paddingTop="7sp"
        android:layout_marginTop="15sp"
        android:textColor="@android:color/white"
        android:textColorHint="#e2434b"
        android:textSize="25sp"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:layout_below="@id/passwordEdTxt"
        android:layout_gravity="center"
        android:background="@drawable/loginbtn"
        android:fontFamily="@font/nexabold"
        android:text="Log in"
        android:layout_marginTop="35sp"
        android:textColor="#fee9d7"
        android:textSize="14pt"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@id/childLinearLyt"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30sp"
        android:layout_marginBottom="30sp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textColor="@android:color/white"
            android:text="Want to join the family? "
            android:fontFamily="@font/nexalight"
            />

        <TextView
            android:id="@+id/signUpBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIgn Up"
            android:fontFamily="@font/nexabold"
            android:textSize="8pt"
            android:textColor="#e2434b"
            android:gravity="left"
            />
    </LinearLayout>
</RelativeLayout>