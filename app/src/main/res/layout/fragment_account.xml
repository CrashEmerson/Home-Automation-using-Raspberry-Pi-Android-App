<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/account_username_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="12dp"
                    android:paddingStart="25dp"
                    android:src="@drawable/ic_username" />


                <TextView
                    android:id="@+id/account_usernameTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/account_username_icon"
                    android:fontFamily="@font/robotoregular"
                    android:gravity="start|center_vertical"
                    android:padding="2dp"
                    android:paddingStart="20dp"
                    android:text="Change Username"
                    android:textColor="@color/lightBlack"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/account_username_valueTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/account_usernameTxtView"
                    android:layout_toEndOf="@id/account_username_icon"
                    android:fontFamily="@font/robotolightitalic"
                    android:gravity="start|center_vertical"
                    android:padding="2dp"
                    android:paddingStart="20dp"
                    android:text="Dark mode"
                    android:textColor="@color/lightBlack"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/account_username_edit_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="12dp"
                    android:paddingStart="25dp"
                    android:src="@drawable/ic_edit" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/account_password_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="12dp"
                    android:paddingStart="25dp"
                    android:src="@drawable/ic_password" />


                <TextView
                    android:id="@+id/account_passwordTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/account_password_icon"
                    android:fontFamily="@font/robotoregular"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:paddingStart="20dp"
                    android:text="Change Password"
                    android:textColor="@color/lightBlack"
                    android:textSize="18sp" />


                <ImageView
                    android:id="@+id/account_password_edit_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="12dp"
                    android:paddingStart="25dp"
                    android:src="@drawable/ic_edit" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/accountRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>